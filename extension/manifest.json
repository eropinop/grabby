{
  "manifest_version": 3,
  "name": "Grabby",
  "description": "Grab text and images from the current page and its subpages into a DOC file.",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "action": {
    "default_title": "Grab Content",
    "default_popup": "popup.html"
  }
}
